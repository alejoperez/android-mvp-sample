<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonPrimaryTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:layout_marginTop">@dimen/activity_padding</item>
        <item name="android:layout_marginBottom">@dimen/activity_padding</item>
    </style>

    <style name="ButtonAccentTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:layout_marginTop">@dimen/activity_padding</item>
        <item name="android:layout_marginBottom">@dimen/activity_padding</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:layout_marginTop">@dimen/activity_padding</item>
        <item name="android:layout_marginBottom">@dimen/activity_padding</item>
    </style>

</resources>
